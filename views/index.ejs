<% layout('/layouts/boilerplate') %>
    <style>
    body {
        background-color: #ECF2FF;
    }
    .home-card-img {
        height: 350px;
        width: 100%;
        object-fit: cover;
    }
    .card {
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .card-body {
        flex-grow: 1;
        text-align: center;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
</style>

    <h1 class="text-center">Welcome to InkNest</h1>
    <div id="carouselExampleFade" class="carousel slide carousel-fade mb-3">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src=https://res.cloudinary.com/dtwbilva0/image/upload/v1766123228/home_blog_lr7hho.jpg
                    class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://res.cloudinary.com/dxldqvmej/image/upload/v1693478304/InkNest/home5_n9go3l.jpg"
                    class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://res.cloudinary.com/dxldqvmej/image/upload/v1693478359/InkNest/home4_at3vrb.jpg"
                    class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <div class="row mb-3">
        <div class="col-md-4">
            <div class="card h-100">

                <a href="/blogs">
                    <img src="https://res.cloudinary.com/dtwbilva0/image/upload/v1766122230/read_bloags_cover_page_mtny4f.avif"
                        class="card-img-top home-card-img" alt="...">
                </a>
                <div class="card-body d-flex flex-column align-items-center">
                    <!-- <br><br><br><br><br><br> -->
                    <h5 class="card-title text-center">Read BLOGS!</h5>
                    <p class="card-text text-center">Click on the image to read all blogs.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <a href="/blogs/new">
                    <img src="https://res.cloudinary.com/dtwbilva0/image/upload/v1766122328/new_blog_cover_page_hishio.jpg"
                        class="card-img-top home-card-img" alt="...">
                </a>
                <div class="card-body d-flex flex-column align-items-center">
                    <h5 class="card-title">ADD NEW BLOG!</h5>
                    <p class="card-text">Click on the image to share your thoughts, it's a safe platform</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <a href="/login">
                    <img src="https://res.cloudinary.com/dtwbilva0/image/upload/v1766122230/login_cover_page_u4nxgg.avif"
                        class="card-img-top home-card-img" alt="...">
                </a>
                <div class="card-body d-flex flex-column align-items-center">
                    <h5 class="card-title text-center">Login</h5>
                    <p class="card-text text-center">Click on the image to login and access more features.</p>
                </div>
            </div>
        </div>
    </div>

    </div>